.page-container
  float: left

.dialog-box-container
  background none
  position absolute
  z-index 1
  display none

.dialog-box
  padding 10px
  color black
  border-radius 5px
  background-clip padding-box
  background-color white
  border 10px solid rgba(250, 250, 250, 0.2)
  // opacity 0.9

.dialog-text
  padding: 2px 10px
  background-color: white

.dialog-option
  color: white
  padding: 2px 10px
  transition: all 0.5s ease
  &:hover
    background-color: gray

.dialog-option-hovered
  color: white
  padding: 2px 10px
  transition: all 0.5s ease
  background-color: gray
